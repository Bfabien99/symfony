{% extends "base.html.twig" %}

{% block title %} Movies Page {% endblock %}

{% block body %}

    {% if movies %}

        {% for movie in movies %}
            <div class="bg-blue-500 w-56">
                <img src="{{ movie.imagePath }}" alt="{{ movie.title }}" width="300px">
                <aside class="text-center">
                    <h1 class="text-2xl p-1">{{ movie.title }}</h3>
                    <p class="p-2">{{ movie.description }}</p>
                    <small> release : {{ movie.releaseYear}}</small>
                </aside>
                <a href="movies/{{ movie.id}}">voir</a>
            </div>
        {% endfor %}
        
    {% else %}
        <h3>No movies to show</h3>
    {% endif %}

{% endblock %}